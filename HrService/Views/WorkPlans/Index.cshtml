@model IEnumerable<HrService.Models.WorkPlan>

@{
    ViewData["Title"] = "Рабочий план";
}

<h4 class="float-right">@ViewData["Title"]</h4>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkTask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deadline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Completed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmployeeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkTask)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
                <td class="text-center">
                    @*@Html.DisplayFor(modelItem => item.Completed)*@
                    @if (item.Completed == 0)
                    {
                        <input type="checkbox" disabled name="WorkPlanIsCompleted" />
                    }
                    else if (item.Completed == 1)
                    {
                        <input type="checkbox" disabled checked name="WorkPlanIsCompleted" />
                    }
                    else
                    {
                        <span style="color:red; font-size: 12px;">задача без статуса</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEmployeeNavigation.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id">Просмотр</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
