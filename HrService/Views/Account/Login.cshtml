@model HrService.ViewModels.LoginModel
@{
    ViewData["Title"] = "Вход на сайт";
}
<h3>@ViewData["Title"]</h3>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Логин</label>
            <input type="text" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-primary" />
        </div>
    </div>
</form>
