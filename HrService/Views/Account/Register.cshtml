@model HrService.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
<h3>@ViewData["Title"]</h3>
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Логин</label><br />
            <input class="form-control" type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Пароль</label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" class="btn btn-outline-primary" value="Регистрация" />
        </div>
    </div>
</form>